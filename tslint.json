{
  "extends": [
    "tslint",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "rules": {
    "rulesDirectory": [
      "node_modules/tslint-lines-between-class-members"
    ],
    "lines-between-class-members": true,
    "max-line-length": {
      "options": [60]
    },
    "newline-after-var": ["error", "always"],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  }
}
